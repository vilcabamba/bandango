<section class="form_section">
  <div class="section_header">
    Emisor
  </div>
  <div class="section_body">
    <div class=" row">
      <div class="col-xs-3">
        {{#view Ember.View contentBinding="view.imagenUrl"}}
          <div class="hidden">{{view Bandango.ImagenUploaderView}}</div>
          {{view Bandango.ImagenUploaderPreview srcBinding="view.content" class="emisor_small_image"}}
        {{/view}}
      </div>
      <div class="col-xs-9">
        <div {{bind-attr class=":form-group view.errors.ruc"}}>
          {{view Ember.TextField value=view.ruc class="form-control" required="true" placeholder="RUC"}}
        </div>
        <div {{bind-attr class=":form-group view.errors.razonSocial"}}>
          {{view Ember.TextField value=view.razonSocial class="form-control" required="true" placeholder="Razón Social"}}
        </div>
        <div {{bind-attr class=":form-group view.errors.nombreComercial"}}>
          {{view Ember.TextField value=view.nombreComercial class="form-control" placeholder="Nombre comercial"}}
        </div>
      </div>
    </div>
    <div {{bind-attr class=":form-group view.errors.direccionMatriz"}}>
      {{view Ember.TextField value=view.direccionMatriz class="form-control" required="true" placeholder="Dirección matriz"}}
    </div>
    <div {{bind-attr class=":form-group view.errors.direccionEstablecimiento"}}>
      {{view Ember.TextField value=view.direccionEstablecimiento class="form-control" required="true" placeholder="Dirección establecimiento"}}
    </div>
    <div {{bind-attr class=":form-group view.errors.codigoEstablecimiento"}}>
      {{view Ember.TextField value=view.codigoEstablecimiento class="form-control" required="true" placeholder="Código establecimiento"}}
    </div>
    <div {{bind-attr class=":form-group view.errors.codigoPuntoEmision"}}>
      {{view Ember.TextField value=view.codigoPuntoEmision class="form-control" required="true" placeholder="Código punto de emisión"}}
    </div>
    <div {{bind-attr class=":form-group view.errors.contribuyenteEspecialNumeroResolucion"}}>
      {{view Ember.TextField value=view.contribuyenteEspecialNumeroResolucion class="form-control" placeholder="Contribuyente especial nro. resolución"}}
    </div>
    <div {{bind-attr class=":form-group view.errors.obligadoALlevarContabilidad"}}>
      <label for="obligadoALlevarContabilidad">Obligado a llevar contabilidad</label>
      {{view Ember.Checkbox checked=view.obligadoALlevarContabilidad name="obligadoALlevarContabilidad"}}
    </div>
  </div>
</section>
<div class="row">
  <div class="col-xs-6 text-danger">
    {{array_with_lines view.errors_messages}}
  </div>
  <div class="col-xs-6 actions">
    {{link-to "Cancelar" "preferencias.index" class="btn btn-link"}}
    <input type="submit" value="Actualizar" class="btn btn-primary" {{bind-attr disabled=view.submitting}} />
  </div>
</div>
