<div class="row">
  <div class="col-xs-6">
    <table class="default_table cash-summary-table">
      <tbody>

        {{!-- ventas --}}
        <tr>
          <th colspan="2">Efectivo ventas</th>
        </tr>
        <tr class="row_divider">
          <td>Base</td>
          <td>{{number_to_currency model.efectivoVentas}}</td>
        </tr>
        <tr>
          <td>IVA</td>
          <td>{{number_to_currency model.ivaVentas}}</td>
        </tr>
        <tr>
          <td>ICE</td>
          <td>{{number_to_currency model.iceVentas}}</td>
        </tr>

        {{!-- compras --}}
        <tr>
          <th colspan="2">Efectivo compras</th>
        </tr>
        <tr class="row_divider">
          <td>Base</td>
          <td>{{number_to_currency model.efectivoCompras}}</td>
        </tr>
        <tr>
          <td>IVA</td>
          <td>{{number_to_currency model.ivaCompras}}</td>
        </tr>
        <tr>
          <td>ICE</td>
          <td>{{number_to_currency model.iceCompras}}</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-xs-6">
    <table class="default_table cash-summary-table">
      <tbody>
        <tr>
          <th colspan="2">Efectivo total en caja</th>
        </tr>
        <tr class="row_divider">
          <td>Fondo anterior</td>
          <td>
            <span class="label label-info">{{number_to_currency model.fondoAnterior}}</span>
          </td>
        </tr>
        <tr>
          <td>Ventas</td>
          <td>
            <span class="label label-default">{{number_to_currency model.totalVentas}}</span>
          </td>
        </tr>
        <tr>
          <td>Compras</td>
          <td>
            <span class="label label-default">{{number_to_currency model.totalCompras}}</span>
          </td>
        </tr>
        <tr class="row_divider">
          <td>Efectivo te√≥rico</td>
          <td>
            <span class="label label-success">{{number_to_currency model.efectivoTeorico}}</span>
          </td>
        </tr>
        <tr>
          <td>Efectivo real</td>
          <td>
            <span class="label label-info">{{number_to_currency model.efectivoReal}}</span>
          </td>
        </tr>
        <tr class="row_divider">
          <td>Descuadre</td>
          {{view Bandango.CierreCajaDescuadreCellView model=model}}
        </tr>
        <tr>
          <td>Retiro</td>
          <td class="align_right">
            {{#if view.includeForm}}
              {{view Ember.TextField type="number" step="any" value=model.retiro class="small_padding form-control minimal_input"}}
            {{else}}
              <span class="label label-warning">{{number_to_currency model.retiro}}</span>
            {{/if}}
          </td>
        </tr>
        <tr class="row_divider">
          <td>Nuevo fondo de caja</td>
          <td>
            <span class="label label-primary">{{number_to_currency model.nuevoFondo}}</span>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
