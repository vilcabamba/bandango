<section class="form_section">
  <div class="section_header">
    {{comprobante.tipo}}
  </div>
  <div class="section_body">
    {{#if sustentoComprobante}}
      <div class="row">
        <div class="col-xs-3">
          <span class="stronger">Sustento Tributario</span>
        </div>
        <div class="col-xs-9">
          {{sustentoComprobante.tipo}}
        </div>
      </div>
    {{/if}}
    <div class="row">
      <div class="col-xs-3">
        <span class="stronger">Número de serie</span>
      </div>
      <div class="col-xs-9">
        {{numeroDeSerie}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <span class="stronger">Fecha de registro</span>
      </div>
      <div class="col-xs-9">
        {{humanize_time fechaRegistro}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <span class="stronger">Fecha de emisión</span>
      </div>
      <div class="col-xs-9">
        {{humanize_time fechaEmision}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <span class="stronger">Nº de autorización</span>
      </div>
      <div class="col-xs-9">
        {{autorizacionComprobante}}
      </div>
    </div>
  </div>
</section>
<section class="form_section">
  <div class="section_header">
    {{#if isVenta}}
      Cliente
    {{else}}
      Proveedor
    {{/if}}
  </div>
  <div class="section_body">
    <div class="has_margin">
      {{#with cliente}}
        {{partial "clientes/show"}}
      {{/with}}
    </div>
  </div>
</section>
<section class="form_section">
  <div class="section_header">
    Ítems
  </div>
  <div class="section_body">
    {{view Bandango.OrderItemsTableView}}
  </div>
</section>
<section class="form_section">
  <div class="section_header">
    Retenciones
  </div>
  <div class="section_body">
    {{view Bandango.RetencionesTableView}}
  </div>
</section>
