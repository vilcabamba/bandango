<div class="align_center">
  <h2>{{view.actionText}}</h2>
</div>

<ol class="breadcrumb">
  <li>
    {{link-to "Categorías" "categorias.index"}}
  </li>
  <li>
    {{link-to model.category.nombre "items.index" model.category}}
  </li>
  <li>
    {{link-to model.nombre "items.show" model}}
  </li>
  <li class="active">
    {{view.actionText}}
  </li>
</ol>

<div {{bind-attr class=":form-group view.errors.nombre"}}>
  {{view Ember.TextField value=view.nombre class="form-control" required="true" placeholder="Nombre"}}
</div>
<div {{bind-attr class=":form-group view.errors.descripcion"}}>
  {{view Ember.TextField value=view.descripcion class="form-control" placeholder="Descripción"}}
</div>
<div class="form-group row">
  <div class="col-xs-3">
    <div {{bind-attr class=":input-group view.errors.base"}}>
      <span class="input-group-addon">$</span>
      {{view Ember.TextField value=view.base class="form-control align_right" required="true" placeholder="Base" step="any"}}
    </div>
  </div>
  <div class="col-xs-1"></div>
  <div class="col-xs-4">
    <div {{bind-attr class=":input-group view.errors.ivaTarifa"}}>
      <span class="input-group-addon">
        {{view Ember.Checkbox checked=view.iva name="iva"}}
        <label for="iva">IVA</label>
      </span>
      {{view Bandango.NumberField value=view.ivaTarifa class="form-control align_right" enabled=view.iva enabledProperty=true}}
      <span class="input-group-addon">
        %
      </span>
    </div>
  </div>
  <div class="col-xs-4">
    <div {{bind-attr class=":input-group view.errors.iceTarifa"}}>
      <span class="input-group-addon">
        {{view Ember.Checkbox checked=view.ice name="ice"}}
        <label for="ice">ICE</label>
      </span>
      {{view Bandango.NumberField value=view.iceTarifa class="form-control align_right" enabled=view.ice enabledProperty=true}}
      <span class="input-group-addon">
        %
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 text-danger">
    {{array_with_lines view.errors_messages}}
  </div>
  <div class="col-xs-6 actions">
    {{#if view.newRecord}}
      {{link-to "Cancelar" "items.index" class="btn btn-link"}}
    {{else}}
      {{link-to "Cancelar" "items.show" view.model class="btn btn-link"}}
    {{/if}}
    <input type="submit" value="{{unbound view.submitButtonText}}" class="btn btn-primary" {{bind-attr disabled=view.submitting}} />
  </div>
</div>
