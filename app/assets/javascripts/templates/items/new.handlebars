<div class="align_center">
  <h3>{{view.actionText}}</h3>
</div>

<div class="form-group">
  {{view Ember.TextField value=view.nombre class="form-control" required="true" placeholder="Nombre"}}
</div>
<div class="form-group">
  {{view Ember.TextField value=view.descripcion class="form-control" placeholder="Descripci√≥n"}}
</div>
<div class="row">
  <div class="col-xs-3">
    <div class="input-group">
      <span class="input-group-addon">$</span>
      {{view Ember.TextField value=view.base class="form-control align_right" required="true" placeholder="Base" step="any"}}
    </div>
  </div>
  <div class="col-xs-1"></div>
  <div class="col-xs-4">
    <div class="input-group">
      <span class="input-group-addon">
        {{view Ember.Checkbox checked=view.iva name="iva"}}
        <label for="iva">IVA</label>
      </span>
      {{view Bandango.NumberField value=view.ivaTarifa class="form-control align_right" enabled=view.iva}}
      <span class="input-group-addon">
        %
      </span>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="input-group">
      <span class="input-group-addon">
        {{view Ember.Checkbox checked=view.ice}} ICE
      </span>
      {{view Bandango.NumberField value=view.iceTarifa class="form-control align_right" placeholder=""}}
      <span class="input-group-addon">
        %
      </span>
    </div>
  </div>
</div>

<div class="row has_margin">
  <div class="col-xs-6 text-danger">
    {{array_with_lines view.errors_messages}}
  </div>
  <div class="col-xs-6 actions">
    {{link-to "Cancelar" "items.index" class="btn btn-link"}}
    <input type="submit" value="{{unbound view.submitButtonText}}" class="btn btn-primary" {{bind-attr disabled=view.submitting}} />
  </div>
</div>
