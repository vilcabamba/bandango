<ol class="breadcrumb">
  {{#if view.newRecord}}
    <li>
      {{link-to "Usuarios" "users.index"}}
    </li>
    <li class="active">Nuevo</li>
  {{else}}
    <li>
      {{link-to "Usuarios" "users.index"}}
    </li>
    <li>
      {{link-to view.model.firstNames "users.show" view.model}}
    </li>
    <li class="active">Editar</li>
  {{/if}}
</ol>

{{partial "users/form"}}

<div class="row">
  <div class="col-xs-6 text-danger">
    {{array_with_lines view.errors_messages}}
  </div>
  <div class="col-xs-6 actions">
    {{#if view.newRecord}}
      {{link-to "Cancelar" "users.index" class="btn btn-link"}}
    {{else}}
      {{link-to "Cancelar" "users.show" view.model.id class="btn btn-link"}}
      {{#view Bandango.DeleteButtonView action="destroyUser"}}Desactivar{{/view}}
    {{/if}}
    <input type="submit" value="{{unbound view.submitButtonText}}" class="btn btn-primary" {{bind-attr disabled=view.submitting}}>
  </div>
</div>
